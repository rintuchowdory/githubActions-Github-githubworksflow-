name: "Customer GITHUB_ENV var Demo"

on:
    push:
        branches: ["main"]
    workflow_dispatch

jobs:
  custome_GITHUB_ENV:
    runs-on: ubuntu-latest
    steps:
      - name: set the value
        id: step_one
        run: |
          echo "action_state=yellow" >> $GITHUB_ENV

      - name: Use the value
        id: step_two
        run: |
          echo "${{ env.action_state }}" # This will output 'yellow'
